<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="handlers.PatronController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <center>
        <TableView fx:id="patronTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="patronIDColumn" text="Patron ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="120.0" text="First Name" />
                <TableColumn fx:id="lastNameColumn" prefWidth="120.0" text="Last Name" />
                <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="Phone" />
                <TableColumn fx:id="emailColumn" prefWidth="180.0" text="Email" />
                <TableColumn fx:id="addressColumn" prefWidth="180.0" text="Address" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <left>
        <VBox alignment="TOP_LEFT" maxWidth="300" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets right="10" />
            </BorderPane.margin>
            
            <Label style="-fx-font-weight: bold;" text="Patron Details" />

            <Label text="First Name:" />
            <TextField fx:id="firstNameField" promptText="Enter first name" />

            <Label text="Last Name:" />
            <TextField fx:id="lastNameField" promptText="Enter last name" />
            
            <Label text="Email:" />
            <TextField fx:id="emailField" promptText="Enter email" />

            <Label text="Phone Number:" />
            <TextField fx:id="phoneField" promptText="Enter phone number" />
            
            <Label text="Address:" />
            <TextField fx:id="addressField" promptText="Enter address" />
            
            <Separator />
            
            <HBox alignment="CENTER" spacing="10.0">
                <Button maxWidth="Infinity" onAction="#handleSavePatron" text="Save / Update" HBox.hgrow="ALWAYS" />
                
                <Button maxWidth="Infinity" onAction="#handleClearFields" text="Clear Fields" HBox.hgrow="ALWAYS" />
            </HBox>
            
            <Button maxWidth="Infinity" onAction="#handleDeletePatron" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Delete Selected Patron" HBox.hgrow="ALWAYS" />
            
        </VBox>
    </left>
</BorderPane>
