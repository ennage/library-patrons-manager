<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-font-family: Consolas;" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="library.controllers.TransactionController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <center>
        <TableView fx:id="transactionTable" BorderPane.alignment="CENTER">
            <placeholder>
                <Label text="No outstanding loans found." />
            </placeholder>
            <columns>
                <TableColumn fx:id="transactionIDColumn" text="Trans ID" prefWidth="80.0" maxWidth="-Infinity" minWidth="80.0" />
                <TableColumn fx:id="patronNameColumn" text="Patron" prefWidth="150.0" />
                <TableColumn fx:id="bookTitleColumn" text="Book Title" prefWidth="250.0" />
                <TableColumn fx:id="borrowDateColumn" text="Borrowed" prefWidth="100.0" />
                <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100.0" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    
    <left>
        <VBox alignment="TOP_LEFT" prefWidth="300.0" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets right="10" />
            </BorderPane.margin>
            
            <Label alignment="CENTER" prefHeight="30.0" prefWidth="303.0" style="-fx-font-weight: bold; -fx-font-size: 18px;" text="TRANSACTIONS" textAlignment="CENTER" />
            
            <Separator prefWidth="200.0" />
            
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Record New Loan" />

            <HBox prefHeight="30.0" prefWidth="300.0">
                <children> 
                    <Label prefHeight="30.0" prefWidth="90.0" text="Patron:" />
                    <ComboBox fx:id="patronComboBox" prefHeight="30.0" prefWidth="210.0" promptText="Choose Patron" HBox.hgrow="ALWAYS" />
                </children>
            </HBox>

            <HBox prefHeight="30.0" prefWidth="300.0">
                <children> 
                    <Label prefHeight="30.0" prefWidth="90.0" text="Book:" />
                    <ComboBox fx:id="bookComboBox" prefHeight="30.0" prefWidth="210.0" promptText="Choose Available Book" HBox.hgrow="ALWAYS" />
                </children>
            </HBox>
            
            <Button fx:id="borrowButton" onAction="#handleBorrowBook" text="Record Loan (Borrow)" 
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;" 
                    maxWidth="Infinity" />
            
            <Separator prefHeight="20.0" prefWidth="250.0" />

            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Return Loan" />
            <Label text="Select a transaction from the table to return." />
            
            <Button fx:id="returnButton" onAction="#handleReturnBook" text="Record Return" 
                    style="-fx-background-color: #F44336; -fx-text-fill: white;" 
                    maxWidth="Infinity" disable="true" />
            
            <Separator VBox.vgrow="ALWAYS" />

        </VBox>
    </left>
</BorderPane>