<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-font-family: Consolas;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.controllers.TransactionController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <center>
        <TableView fx:id="transactionTable" BorderPane.alignment="CENTER">
            <placeholder>
                <Label text="No outstanding loans found." />
            </placeholder>
            <columns>
                <TableColumn fx:id="transactionIDColumn" prefWidth="100.0" text="Transaction ID" />
                <TableColumn fx:id="patronNameColumn" prefWidth="150.0" text="Patron" />
                <TableColumn fx:id="bookTitleColumn" prefWidth="250.0" text="Book Title" />
                <TableColumn fx:id="borrowDateColumn" prefWidth="100.0" text="Borrowed" />
                <TableColumn fx:id="dueDateColumn" prefWidth="100.0" text="Due Date" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    
    <left>
        <VBox alignment="TOP_LEFT" prefWidth="300.0" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets right="10" />
            </BorderPane.margin>
            
            <Label alignment="CENTER" prefHeight="30.0" prefWidth="303.0" style="-fx-font-weight: bold; -fx-font-size: 18px;" text="TRANSACTIONS" textAlignment="CENTER">
            <font>
                <Font name="Consolas" size="12.0" />
            </font></Label>
            
            <Separator prefWidth="200.0" />
            
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Record Loan/Borrow:" />

            <HBox prefHeight="30.0" prefWidth="222.0">
                <children> 
                    <Label prefHeight="30.0" prefWidth="90.0" text="Patron:" />
                    <ComboBox fx:id="patronComboBox" prefHeight="30.0" prefWidth="210.0" promptText="Select Patron" />
                </children>
            </HBox>

            <HBox prefHeight="30.0" prefWidth="222.0">
                <children> 
                    <Label prefHeight="30.0" prefWidth="90.0" text="Book:" />
                    <ComboBox fx:id="bookComboBox" prefHeight="30.0" prefWidth="210.0" promptText="Available Books" />
                </children>
            </HBox>
            
            <Button fx:id="borrowButton" maxWidth="Infinity" onAction="#handleBorrowBook" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Record" />
            
            <Separator prefHeight="20.0" prefWidth="250.0" />

            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Return Loan">
            <font>
                <Font name="Consolas" size="12.0" />
            </font></Label>
            <Label prefHeight="31.0" prefWidth="300.0" text="Select a transaction from the table to return." textAlignment="CENTER" wrapText="true" />
            
            <Button fx:id="returnButton" disable="true" maxWidth="Infinity" onAction="#handleReturnBook" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Record Return">
            <font>
                <Font name="Consolas" size="12.0" />
            </font></Button>
            
            <Separator VBox.vgrow="ALWAYS" />

        </VBox>
    </left>
</BorderPane>
