<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane 
    xmlns="http://javafx.com/javafx/21" 
    xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="handlers.PatronController">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

    <center>
        <TableView fx:id="patronTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="IDColumn" prefWidth="75.0" text="Patron ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="120.0" text="First Name" />
                <TableColumn fx:id="lastNameColumn" prefWidth="120.0" text="Last Name" />
                <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
                <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="Phone" />
                <TableColumn fx:id="addressColumn" prefWidth="180.0" text="Address" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>

    <right>
        <VBox alignment="TOP_LEFT" spacing="10.0" maxWidth="300">
            <BorderPane.margin>
                <Insets left="20" />
            </BorderPane.margin>
            
            <Label style="-fx-font-weight: bold;" text="Patron Details" />

            <Label text="First Name:" />
            <TextField fx:id="firstNameField" promptText="Enter first name" />

            <Label text="Last Name:" />
            <TextField fx:id="lastNameField" promptText="Enter last name" />
            
            <Label text="Email:" />
            <TextField fx:id="emailField" promptText="Enter email" />

            <Label text="Phone Number:" />
            <TextField fx:id="phoneField" promptText="Enter phone number" />
            
            <Label text="Address:" />
            <TextField fx:id="addressField" promptText="Enter address" />
            
            <Separator />
            
            <HBox alignment="CENTER" spacing="10.0">
                <Button onAction="#handleSavePatron" text="Save / Update" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
                
                <Button onAction="#handleClearFields" text="Clear Fields" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
            </HBox>
            
            <Button onAction="#handleDeletePatron" text="Delete Selected Patron" style="-fx-background-color: #f44336; -fx-text-fill: white;" HBox.hgrow="ALWAYS" maxWidth="Infinity" />
            
        </VBox>
    </right>
</BorderPane>