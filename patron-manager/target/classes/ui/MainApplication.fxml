<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="750.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="configuration.MainController">
    
    <TabPane prefHeight="634.0" prefWidth="1152.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS"> 
        
        <tabs>
            <Tab text="Records: Book Categories">
                <content>
                    <fx:include source="pages/CategoryView.fxml" /> 
                </content>
            </Tab>
            <Tab text="Records: Books">
                <content>
                    <fx:include source="pages/BookView.fxml" />
                </content>
            </Tab>
            <Tab text="Records: Patrons">
                <content>
                    <fx:include source="pages/PatronView.fxml" /> 
                </content>
            </Tab>
            <Tab text="Transactions: Record &amp; Return">
                <content>
                    <fx:include source="pages/TransactionView.fxml" />
                </content>
            </Tab>
        </tabs>
    </TabPane>
</VBox>
